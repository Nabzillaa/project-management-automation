{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "incremental": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@pm-app/shared": ["../../packages/shared/dist/index"],
      "@pm-app/planning-engine": ["../../packages/planning-engine/dist/index"],
      "@pm-app/database": ["../../packages/database/dist/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
